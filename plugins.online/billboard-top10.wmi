#!/bin/bash

# wminfo plugin: Billboard Top 10

# command: wminfo -p billboard-top10.wmi -b#d70377 -f#ffffff

lynx --source http://www.billboard.com/charts/hot-100 | \
	dos-unix | \
	perl -pe 's/\n/ /g;s/</\n</g' | \
	grep -E "<h2>|trackaction=\"Artist Name\"" | \
	perl -pe 's/\n/ /' | \
	sed 's/<h2>/\n/g' | \
	grep 'trackaction' | \
	sed 's/<.*>/\-/' | \
	sed -E 's/\s+/ /g;s/^ //'

