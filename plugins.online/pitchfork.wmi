#!/bin/bash

# wminfo plugin: Pitchfork best new albums

# command: wminfo -p pitchfork.wmi -b#ef4135 -f#ffffff

lynx --source http://pitchfork.com/reviews/best/albums/ | \
	perl -pe 's/\n/ /g' | \
	perl -pe 's/\s+/ /g' | \
	sed 's/</\n</g' | \
	grep -E '/reviews/albums' | \
	sed 's/<.*>//' | \
	grep -Ev '^Tweet$|^Reviews$|^Albums$|^$|^ $' | \
	perl -pe 's/^ (.*)\n/$1- /'
echo
