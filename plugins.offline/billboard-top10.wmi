#!/bin/bash

# wminfo plugin: Billboard Top 10

# command: wminfo -p billboard-top10.wmi -b#d70377 -f#ffffff

lynx --source localhost/wminfo/billboard-top10.html | \
	dos-unix | \
	sed 's/\n/ /g;s/</\n</g' | \
	grep -E "<h1>|<a href=\"/artist/" | \
	grep -Ev "<h1><a href=|Browse the Hot 100 Archives" | \
	sed -E 's/<a href="\/artist\/.*?>/- /g' | \
	perl -pe 's/\n/ /g;' | \
	sed 's/</\n</g' | \
	sed 's/<.*>//' | \
	perl -pe 's/ +/ /g' | \
	grep -Ev '^ $|\- \- \-' | \
	punctuation
echo

